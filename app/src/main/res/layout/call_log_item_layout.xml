<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/nameInitial"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/round_blue_bg"
        android:gravity="center"
        android:text=""
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/nameInitial"
        android:fontFamily="@font/roboto_medium"
        android:text=""
        android:textColor="#000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/dial"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="5dp"
        android:src="@drawable/ic_black_phone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@id/name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/nameInitial"
        android:background="@drawable/curved_light_blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/callType"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_black_phone" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="1dp"
            android:src="@drawable/sim1" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="00:00"
            android:textColor="#000"
            android:textSize="8sp" />

    </LinearLayout>


</RelativeLayout>